head
  //- Page title
  title= `${title} | ${metas.title}`
  link(rel="canonical" href=metas.url)

  //- Metas
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
  meta(name="description", content=metas.description)
  meta(name="keywords", content=metas.keywords)

  //- OGP
  if metas.author
    meta(name="author", content=metas.author)
  meta(name="twitter:site", content=metas.url)
  meta(name="twitter:card", content="summary_large_image")
  meta(name="twitter:title" content=metas.title)
  meta(name="twitter:description", content=metas.description)
  meta(name="twitter:image", content=metas.image)
  if metas.author
    meta(name="twitter:creator", content=metas.author)
  meta(property="og:title", content=metas.title)
  meta(property="og:url" content=metas.url)
  meta(property="og:site_name", content=metas.title)
  meta(property="og:type", content="website")
  meta(property="og:locale", content=metas.locale)
  meta(property="og:image", content=metas.image)
  meta(property="og:description", content=metas.description)
  if metas.fbAppId
    meta(property="fb:app_id", content=metas.fbAppId)

  //- Favicon
  link(rel="icon", href="/src/images/favicons/favicon-32px.png")
  link(rel="icon", href="/src/images/favicons/favicon.svg")

  //- Apple Touch icon
  link(rel="apple-touch-icon" href="/src/images/favicons/apple-touch-icon.png")

  //- Page styles
  block style
    link(preload rel="stylesheet" href="/src/styles/critical.scss")
    link(rel="stylesheet" href="/src/styles/main.scss")
  block head